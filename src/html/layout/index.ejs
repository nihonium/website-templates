<%# ejsRootは都度変更する %>
<% const ejsRoot = '../'; %>
<%
    const pageTitle = "レイアウトページ | hoge";
    const pageDescription = "レイアウトページのディスクプリクション | hoge";
    const pageCanonical = "https://www.hoge.jp/";
%>

<%# 見出し %>
<%
    const ttlName01 = "テーブル";
    const ttlName02 = "入力フォーム";
    const ttlName03 = "タブ切り替え";
    const ttlName04 = "Google Maps埋め込み";
%>

<!DOCTYPE html>
<html lang="ja" prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- pageTitle %></title>
    <meta name="description" content="<%- pageDescription %>">
    <meta name="keywords" content="hoge">
    <meta name="format-detection" content="telephone=no">
    <link rel="canonical" href="<%= pageCanonical %>">
    <%# 共通CSS %>
    <%- include(ejsRoot + '_component/_common/_css', {root: ejsRoot}); %>
    <!-- ページ独自CSS -->
    <link rel="stylesheet" type="text/css" href="<%- ejsRoot %>assets/css/layout.css">
    <%# OGP %>
    <%- include(ejsRoot + '_component/_common/_ogp', {root: ejsRoot, ogType: 'article', ogTitle: pageTitle, ogDescription: pageDescription, ogUrl: pageCanonical}); %>
    <%# Googleタグマネージャー %>
    <%- include(ejsRoot + '_component/_common/_gtm') %>
</head>

<body>
    <%- include(ejsRoot + '_component/_common/_header', {root: ejsRoot, page: 'single'}) %>
    <!-- /header -->

    <div class="c-breadcrumb">
        <h1>hoge</h1>
    </div>

    <main class="c-main">
        <section class="c-section">
            <div class="c-section__content">
                <h2 class="c-strong">アンカーリンク</h2>
                <p class="c-mt20">
                    <a class="c-link" href="#1" data-scroll><%- `${ttlName01}` %></a>
                </p>
                <p class="c-mt20">
                    <a class="c-link" href="#2" data-scroll><%- `${ttlName02}` %></a>
                </p>
                <p class="c-mt20">
                    <a class="c-link" href="#3" data-scroll><%- `${ttlName03}` %></a>
                </p>
                <p class="c-mt20">
                    <a class="c-link" href="#4" data-scroll><%- `${ttlName04}` %></a>
                </p>
            </div>
        </section>
        <section id="1" class="c-section">
            <div class="c-section__content">
                <h2 class="c-strong"><%- `${ttlName01}` %></h2>
                <div class="c-mt20">
                    <p>SP時 横スクロールあり</p>
                    <div class="c-tbl-scroll">
                        <table class="c-tbl">
                            <thead>
                                <tr>
                                    <th>基本情報</th>
                                    <th>お試し</th>
                                    <th>ライト</th>
                                    <th>レギュラー</th>
                                    <th>プレミアム</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>価格</th>
                                    <td>無料</td>
                                    <td>5,000円</td>
                                    <td>10,000円</td>
                                    <td>50,000円</td>
                                </tr>
                                <tr>
                                    <th>登録人数</th>
                                    <td>1名まで</td>
                                    <td>10名まで</td>
                                    <td>50名まで</td>
                                    <td>300名まで</td>
                                </tr>
                                <tr>
                                    <th>ストレージ容量</th>
                                    <td>100MB</td>
                                    <td>10GB</td>
                                    <td>50GB</td>
                                    <td>100GB</td>
                                </tr>
                                <tr>
                                    <th>オプション</th>
                                    <td>無し</td>
                                    <td>ダミーテキスト、このテキストはダミーです。</td>
                                    <td>いろはにほへとちりぬるお</td>
                                    <td>hoge</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <p class="c-tbl-scroll-note">右にスクロールできます→</p>
                </div>
                <div class="c-mt20">
                    <p>通常版</p>
                    <table class="c-tbl">
                        <thead>
                            <tr>
                                <th>基本情報</th>
                                <th>お試し</th>
                                <th>ライト</th>
                                <th>レギュラー</th>
                                <th>プレミアム</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>価格</th>
                                <td>無料</td>
                                <td>5,000円</td>
                                <td>10,000円</td>
                                <td>50,000円</td>
                            </tr>
                            <tr>
                                <th>登録人数</th>
                                <td>1名まで</td>
                                <td>10名まで</td>
                                <td>50名まで</td>
                                <td>300名まで</td>
                            </tr>
                            <tr>
                                <th>ストレージ容量</th>
                                <td>100MB</td>
                                <td>10GB</td>
                                <td>50GB</td>
                                <td>100GB</td>
                            </tr>
                            <tr>
                                <th>オプション</th>
                                <td>無し</td>
                                <td>ダミーテキスト、このテキストはダミーです。</td>
                                <td>いろはにほへとちりぬるお</td>
                                <td>hoge</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
        <!-- /テーブル -->
        <section id="2" class="c-section">
            <div class="c-section__content">
                <h2 class="c-strong"><%- `${ttlName02}` %></h2>
                <div class="c-mt20">
                    <form action="./" method="post">
                        <input class="c-input" type="email" name="email" autocomplete="email">
                        <%#
                        inputタグには適宜、autocomplete属性を追記する
                        例：https://developer.mozilla.org/ja/docs/Web/HTML/Attributes/autocomplete
                        %>
                        <button class="c-input-btn" type="submit">送信</button>
                    </form>
                </div>
            </div>
        </section>
        <!-- /入力フォーム -->
        <section id="3" class="c-section">
            <div class="c-section__content">
                <h2 class="c-strong"><%- `${ttlName03}` %></h2>
                <div class="c-tabs">
                    <ul class="c-tabs-list" data-tabs-list>
                        <li class="is-active">タブ切り替え 1</li>
                        <li>タブ切り替え 2</li>
                    </ul>
                    <div class="c-tabs-content" data-tabs-content>
                        <div class="c-tabs-item is-active" data-tabs-item>
                            <p>タブ切り替え 1のコンテンツ</p>
                        </div>
                        <!-- /タブ切り替え 1 -->
                        <div class="c-tabs-item" data-tabs-item>
                            <p>タブ切り替え 2のコンテンツ</p>
                        </div>
                        <!-- /タブ切り替え 2 -->
                    </div>
                </div>
            </div>
        </section>
        <!-- /タブ切り替え -->
        <section id="4" class="c-section">
            <div class="c-section__content">
                <h2 class="c-strong"><%- `${ttlName04}` %></h2>
                <div class="c-youtube-iframe"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d850494.5342862558!2d130.58595375000002!3d33.62490775!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3541817af77eb125%3A0x97a20ffb4a51384d!2z56aP5bKh55yM!5e0!3m2!1sja!2sjp!4v1663725211225!5m2!1sja!2sjp" width="100%" height="auto" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></div>
            </div>
        </section>
        <!-- /Google Maps埋め込み -->
    </main>
    <!-- /main -->

    <%- include(ejsRoot + '_component/_common/_footer', {root: ejsRoot, page: 'single'}); %>
    <!-- /footer -->
    <%# 共通JS %>
    <%- include(ejsRoot + '_component/_common/_js', {root: ejsRoot}); %>
    <%# ページ独自JSがある場合は、下記に記述 %>
    <script src="<%- ejsRoot %>assets/js/layout.js" defer></script>
</body>

</html>